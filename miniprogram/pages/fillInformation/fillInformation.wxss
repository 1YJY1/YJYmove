/* pages/fillInformation/fillInformation.wxss */

Page {
  width: 100%;
  height: 100%;
}

.whole-block {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order-detail {
  width: 99%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border: 1rpx solid #888;
}

.txt {
  font-size: 30rpx;
  margin-left: 30rpx;
}

.fill-inf {
  width: 99%;
  height: 400rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border: 1rpx solid #888;
}

.small-block{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center
}

.icon-style{
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.divLine {
  background: #888;
  width: 95%;
  height: 1rpx;
  display: flex;
  align-self: center
}

.input {
  width: 80%;
  height: 80rpx;
  border: 1rpx solid #888;
}

.choose-coupon {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.duohang {
  width: 99%;
  height: 300rpx;
  margin-top: 20rpx;
  border: 1rpx solid #888;
}

.bottom-block {
  width: 99%;
  height: 100rpx;
  bottom: 0rpx;
  position: fixed;
  display: flex;
  justify-content: space-between;
  border: 1rpx solid #888;
}

.btn {
  width: 200rpx;
  height: 70rpx;
  margin-left: 100rpx;
  margin-right: 30rpx;
  border-radius: 4px;
  background-color: rgba(16, 136, 162, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
  align-self: center;
  border: 1px solid rgba(187, 187, 187, 1);
}

/* pages/dirverOrder/dirverOrder.wxss */
Page {
  width: 100%;
  height: 100%;
}

.whole-block {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 99%;
  height: 150rpx;
  background-color: #1088A2;
  line-height: 20px;
  border-radius: 10px 10px 10px 10px;
  display: flex;
  align-items: center;
  border: 1px solid #888;
}

.driverInf{
  width: 300rpx;
  height: 150rpx;
  margin-left: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.order-detail {
  width: 99%;
  height: 300rpx;
  line-height: 20px;
  margin-top: 10rpx;
  border-radius: 5px 5px 5px 5px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border: 1px solid #888;
}

.big-block {
  width: 100%;
  height: 80rpx;
  margin-left: 30rpx;
  font-size: 36rpx;
  display: flex;
  align-items: center;
}

.divLine {
  width: 99%;
  height: 3rpx;
  background: black;
  display: flex;
  align-self: center;
}

.small-block {
  width: 100%;
  height: 50rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}

.price-detail {
  width: 99%;
  height: 320rpx;
  line-height: 20px;
  margin-top: 10rpx;
  border-radius: 5px 5px 5px 5px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border: 1px solid #888;
}

.order-inf {
  width: 99%;
  height: 300rpx;
  line-height: 20px;
  margin-top: 10rpx;
  border-radius: 5px 5px 5px 5px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border: 1px solid #888;
}

.lastBlock{
  width: 100%;
  height: 80rpx;
  bottom: 0rpx;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
}

.take {
  width: 80%;
  height: 70rpx;
  border-radius: 4rpx;
  background-color: #1088A2;
  color: rgba(255, 255, 255, 1);
  font-size: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid rgba(187, 187, 187, 1);
}


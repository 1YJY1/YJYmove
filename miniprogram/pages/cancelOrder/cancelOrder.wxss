/* pages/cancelOrder/cancelOrder.wxss */

Page {
  width: 100%;
  height: 100%;
}

.whole-page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.reason{
  background: rgb(221, 220, 220);
  width: 600rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: left;
  padding: 30rpx;
  font-size: 30rpx;
  margin: 20rpx;
}

.on{
  color: #e6464b;
  background: #feeeee;
  border: 2px solid #f7bbbc;
}

.divLine {
  background: #888;
  width: 95%;
  height: 2rpx;
  display: flex;
  align-self: center;
}

.duohang {
  width: 95%;
  height: 500rpx;
  margin-top: 50rpx;
  display: flex;
  align-self: center;
  border: 1rpx solid #888;
}

.btn {
  width: 450rpx;
  height: 90rpx;
  border-radius: 4px;
  background-color: #888;
  color: rgba(255, 255, 255, 1);
  font-size: 35rpx;
  margin-top: 50rpx;
  display: flex;
  align-self: center;
  align-items: center;
  justify-content: center;
  border: 1px solid #888;
}

.yes{
  background-color:#e6464b
}